/* pages/book-detail/book-detail.wxss */

.container {
      background: #f5f5f5;
      width: 100%;
}

.header {
      background: #fff;
      padding: 40rpx 0;
      display: flex;
      flex-direction: column;
      align-items: center;
}

.header image {
      width: 200rpx;
      height: 300rpx;
      box-shadow: 2px 2px 3px #e3e3e3;
}

.title {
      color: #2f2f2f;
      margin: 20rpx 0 0 0;
      font-size: 38rpx;
      font-weight: 600;
}

.author {
      font-size: 28rpx;
      color: #999;
}

.sub-container {
      background: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 30rpx;
      box-sizing: border-box;
      padding: 30rpx;
}

.headline {
      font-size: 30rpx;
      font-weight: 600;
      color: #2f2f2f;
      margin-bottom: 20rpx;
}

.comment-container {
      display: flex;
      flex-wrap: wrap;
}

.comment-container v-tag {
      margin: 0 15rpx 10rpx 0;
}

.num {
      margin-left: 10rpx;
      font-size: 22rpx;
      color: #aaa;
}

/* .comment-container v-tag:nth-child(1)>view {
      background: #fffbdd;
}

.comment-container v-tag:nth-child(2)>view {
      background: #eefbff;
} */

.ex-tag {
      background: #fffbdd !important;
}

.se-tag {
      background: #eefbff !important;
}

.content {
      text-indent: 58rpx;
}

.inner {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-content: flex-start;
      justify-content: flex-start;
}

.inner text {
      line-height: 60rpx;
}

.mask-fask {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: #fff;
      display: flex;
      height: 100rpx;
      box-shadow: 1px -1px 1px #e3d3e3;
      justify-content: space-between;
      align-items: center;
      padding: 0 30rpx;
      z-index: 99;
}

.search-container {
      width: 460rpx;
      border: 1px solid #9c9c9c;
      border-radius: 30rpx;
      font-size: 22rpx;
      text-indent: 20rpx;
      line-height: 60rpx;
}

.mask-really {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      z-index: 99;
}

.mask-really input {
      border: 1px solid #9c9c9c;
      width: 92%;
      box-sizing: border-box;
      border-radius: 30rpx;
      padding-left: 30rpx;
      margin: 20rpx 0;
      background: #f5f5f5;
}

.mask-really image {
      height: 120rpx;
      margin: 20rpx 0;
}

.shadow {
      color: #999;
}

.comment-head {
      width: 100%;
      box-sizing: border-box;
      padding: 0 25rpx;
      display: flex;
      justify-content: space-between;
      line-height: 120rpx;
      color: #b6b6b6;
      border-bottom: 1px solid #f6f6f6;
}

.comment-box {
      width: 100%;
      box-sizing: border-box;
      padding: 0 25rpx;
      display: flex;
      flex-wrap: wrap;
}

.comment-box v-tag {
      margin-bottom: 10rpx;
}

.star-container {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      margin-right: 30rpx;
}

.share-btn {
      margin-left: 10px;
}

.share {
      width: 40rpx;
      height: 40rpx;
}
