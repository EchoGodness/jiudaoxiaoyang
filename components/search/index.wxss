/* components/search/index.wxss */

.container {
      display: flex;
      flex-direction: column;
      align-items: center;
      height: auto;
}

.header {
      width: 100%;
      display: flex;
      background-color: #fff;
      position: fixed;
      padding: 20rpx 0;
      border-top: 1px solid #f5f5f5;
      border-bottom: 1px solid #f5f5f5;
      z-index: 99;
}

.search-container {
      display: inline-flex;
      justify-content: space-between;
      align-items: center;
      background: #f7f7f7;
      color: #666;
      border-radius: 50rpx;
      flex: 4;
}

.bar {
      border-top-right-radius: 15px;
      border-bottom-right-radius: 15px;
      display: inline-block;
      height: 34px;
      flex: 6;
      font-size: 14px;
}

.cancel {
      line-height: 34px;
      flex: 1;
      text-align: center;
}

.icon {
      width: 14px;
      height: 14px;
      margin-left: 12px;
      margin-right: 8px;
}

.cancel-img {
      width: 14px;
      height: 14px;
      margin-right: 10px;
}

.content {
      margin-top: 113rpx;
}

.history {
      width: 690rpx;
      margin: 60rpx 0 20rpx 0;
      display: flex;
      font-size: 14px;
      flex-direction: column;
}

.tags {
      display: flex;
      flex-wrap: wrap;
      margin-top: 24rpx;
      padding-left: 15px;
}

.tags v-tag {
      margin: 0 10px 10px 0;
}

.chunk {
      height: 15px;
      width: 5px;
      background-color: #000;
      display: inline-block;
      margin-right: 10px;
}

.title {
      line-height: 15px;
      display: flex;
      flex-direction: row;
      align-items: center;
}

.loading {
      margin: 50rpx 0 50rpx 0;
}

.loading-center {
      position: absolute;
      top: 50%;
      left: 50%;
}

.empty-tip {
      display: inline-block;
      width: 100%;
      text-align: center;
      position: absolute;
      top: 50%;
      /* left: 275rpx; */
}
