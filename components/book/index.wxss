/* components/book/index.wxss */

.outer {
      display: flex;
      flex-wrap: wrap;
      padding: 0 110rpx;
      /* background: #f5f5f5; */
}

.container {
      width: 240rpx;
      height: 360rpx;
      display: flex;
      flex-direction: column;
      position: relative;
      margin-top: 30rpx;
      box-shadow: 2px 2px 3px #e3e3e3;
}

.container:nth-child(odd) {
      margin-right: 50rpx;
}

.container image {
      width: 100%;
      height: 100%;
}

.des {
      left: 0;
      right: 0;
      padding: 5rpx 10rpx 8rpx 15rpx;
      box-flex: border-box;
      position: absolute;
      bottom: 0;
      background: #fff;
      font-size: 24rpx;
      border-bottom-right-radius: 2px;
      border-bottom-left-radius: 2px;
      display: flex;
      flex-direction: column;
}

.title {
      margin-top: 10rpx;
      text-overflow: ellipsis;
      white-space: nowrap;
      overflow: hidden;
}

.author {
      width: 100%;
      font-size: 20rpx;
      color: #999;
      margin-top: -5rpx;
      margin-bottom: 10rpx;
      text-overflow: ellipsis;
      white-space: nowrap;
      overflow: hidden;
}

.foot {
      font-size: 20rpx;
      display: flex;
      justify-content: flex-end;
}
